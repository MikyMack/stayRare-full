                            <script>
                                // Tab switching
                                function showBannerTab(type, btn) {
                                    ['main', 'two', 'three', 'mobile'].forEach(function (t) {
                                        document.getElementById('banner-table-' + t).style.display = (t === type) ? '' : 'none';
                                    });
                                    // Set active tab
                                    var tabBtns = document.querySelectorAll('.tab-btn');
                                    tabBtns.forEach(function (b) { b.classList.remove('active'); });
                                    if (btn) btn.classList.add('active');
                                }

                                // Modal logic
                                function showAddBannerModal(type) {
                                    document.getElementById('bannerModalTitle').innerText = 'Add ' + (type === 'main' ? 'Main Banner' : type === 'two' ? 'Banner Two' : type === 'three' ? 'Banner Three' : 'Mobile Banner');
                                    document.getElementById('bannerType').value = type;
                                    document.getElementById('bannerId').value = '';
                                    document.getElementById('bannerFormSubmitBtn').innerText = 'Save';

                                    if (type === 'mobile') {
                                        document.getElementById('mainFields').style.display = 'none';
                                        document.getElementById('mobileFields').style.display = '';
                                        document.getElementById('mobileBannerLink').value = '';
                                        document.getElementById('mobileBannerImage').value = '';
                                        document.getElementById('mobileBannerImagePreview').innerHTML = '';
                                    } else {
                                        document.getElementById('mainFields').style.display = '';
                                        document.getElementById('mobileFields').style.display = 'none';
                                        document.getElementById('bannerTitle').value = '';
                                        document.getElementById('bannerSubtitle').value = '';
                                        document.getElementById('bannerDescription').value = '';
                                        document.getElementById('bannerLink').value = '';
                                        document.getElementById('bannerImage').value = '';
                                        document.getElementById('bannerImagePreview').innerHTML = '';
                                    }
                                    document.getElementById('bannerModal').style.display = 'block';
                                }

                                function showEditBannerModal(type, banner) {
                                    // Defensive: If banner is a string, parse it
                                    if (typeof banner === 'string') {
                                        try {
                                            banner = JSON.parse(banner);
                                        } catch (e) {
                                            alert('Invalid banner data');
                                            return;
                                        }
                                    }
                                    document.getElementById('bannerModalTitle').innerText = 'Edit ' + (type === 'main' ? 'Main Banner' : type === 'two' ? 'Banner Two' : type === 'three' ? 'Banner Three' : 'Mobile Banner');
                                    document.getElementById('bannerType').value = type;
                                    document.getElementById('bannerId').value = banner._id || '';
                                    document.getElementById('bannerFormSubmitBtn').innerText = 'Update';

                                    if (type === 'mobile') {
                                        document.getElementById('mainFields').style.display = 'none';
                                        document.getElementById('mobileFields').style.display = '';
                                        document.getElementById('mobileBannerLink').value = banner.link || '';
                                        document.getElementById('mobileBannerImage').value = '';
                                        document.getElementById('mobileBannerImagePreview').innerHTML = banner.image ? '<img src="' + banner.image.replace(/"/g, '&quot;').replace(/'/g, '&#39;') + '" style="width:120px;height:50px;object-fit:cover;border-radius:4px;">' : '';
                                    } else {
                                        document.getElementById('mainFields').style.display = '';
                                        document.getElementById('mobileFields').style.display = 'none';
                                        document.getElementById('bannerTitle').value = banner.title || '';
                                        document.getElementById('bannerSubtitle').value = banner.subtitle || '';
                                        document.getElementById('bannerDescription').value = banner.description || '';
                                        document.getElementById('bannerLink').value = banner.link || '';
                                        document.getElementById('bannerImage').value = '';
                                        document.getElementById('bannerImagePreview').innerHTML = banner.image ? '<img src="' + banner.image.replace(/"/g, '&quot;').replace(/'/g, '&#39;') + '" style="width:120px;height:50px;object-fit:cover;border-radius:4px;">' : '';
                                    }
                                    document.getElementById('bannerModal').style.display = 'block';
                                }

                                function closeBannerModal() {
                                    document.getElementById('bannerModal').style.display = 'none';
                                }
                                window.onclick = function (event) {
                                    if (event.target == document.getElementById('bannerModal')) {
                                        closeBannerModal();
                                    }
                                }

                                // Banner API endpoints (no /api prefix)
                                const bannerApi = {
                                    main: { get: '/main', post: '/main', put: '/main/', del: '/main/', toggle: '/main/' },
                                    two: { get: '/two', post: '/two', put: '/two/', del: '/two/', toggle: '/two/' },
                                    three: { get: '/three', post: '/three', put: '/three/', del: '/three/', toggle: '/three/' },
                                    mobile: { get: '/mobile', post: '/mobile', put: '/mobile/', del: '/mobile/', toggle: '/mobile/' }
                                };

                                // Fetch and render banners
                                async function fetchBanners(type) {
                                    try {
                                        const res = await fetch(bannerApi[type].get);
                                        const data = await res.json();
                                        renderBannerList(type, data.banners || []);
                                    } catch (err) {
                                        renderBannerList(type, []);
                                    }
                                }

                                // Safely escape string for HTML attribute
                                function escapeAttr(str) {
                                    if (!str) return '';
                                    return String(str)
                                        .replace(/&/g, '&amp;')
                                        .replace(/"/g, '&quot;')
                                        .replace(/'/g, '&#39;')
                                        .replace(/</g, '&lt;')
                                        .replace(/>/g, '&gt;');
                                }

                                function renderBannerList(type, banners) {
                                    const listId = type + '-banner-list';
                                    const list = document.getElementById(listId);
                                    list.innerHTML = '';
                                    if (!banners.length) {
                                        list.innerHTML = '<li class="body-text" style="padding:20px;">No banners found.</li>';
                                        return;
                                    }
                                    banners.forEach(banner => {
                                        const li = document.createElement('li');
                                        li.className = 'flex gap20 align-center banner-row';

                                        if (!window._bannerDataMap) window._bannerDataMap = {};
                                        const bannerId = banner._id || Math.random().toString(36).substr(2, 9);
                                        window._bannerDataMap[bannerId] = banner;

                                        if (type === 'mobile') {
                                            li.innerHTML = `
                                                <div style="width:140px;">
                                                    <img src="${escapeAttr(banner.image ? banner.image : '/images/no-image.png')}" alt="Banner" />
                                                </div>
                                                <div style="flex:1;">
                                                    <span class="body-text">${banner.link ? `<a href="${escapeAttr(banner.link)}" target="_blank">${escapeAttr(banner.link)}</a>` : ''}</span>
                                                </div>
                                                <div>
                                                    <label class="switch">
                                                        <input type="checkbox" ${banner.isActive ? 'checked' : ''} onchange="toggleBannerStatus('${type}','${escapeAttr(banner._id)}',this)">
                                                        <span class="slider"></span>
                                                    </label>
                                                </div>
                                                <div class="banner-actions">
                                                    <button class="btn btn-sm btn-primary" data-banner-id="${escapeAttr(bannerId)}" data-banner-type="${escapeAttr(type)}"><i class="icon-edit"></i></button>
                                                    <button class="btn btn-sm btn-danger" onclick="deleteBanner('${type}','${escapeAttr(banner._id)}')"><i class="icon-trash"></i></button>
                                                </div>
                                            `;
                                        } else {
                                            li.innerHTML = `
                                                <div style="width:140px;">
                                                    <img src="${escapeAttr(banner.image ? banner.image : '/images/no-image.png')}" alt="Banner" />
                                                </div>
                                                <div style="flex:1;">
                                                    <span class="body-text">${escapeAttr(banner.title || '')}</span>
                                                </div>
                                                <div style="flex:1;">
                                                    <span class="body-text">${escapeAttr(banner.subtitle || '')}</span>
                                                </div>
                                                <div style="flex:2;">
                                                    <span class="body-text">${escapeAttr(banner.description || '')}</span>
                                                </div>
                                                <div style="flex:1;">
                                                    <span class="body-text">${banner.link ? `<a href="${escapeAttr(banner.link)}" target="_blank">${escapeAttr(banner.link)}</a>` : ''}</span>
                                                </div>
                                                <div>
                                                    <label class="switch">
                                                        <input type="checkbox" ${banner.isActive ? 'checked' : ''} onchange="toggleBannerStatus('${type}','${escapeAttr(banner._id)}',this)">
                                                        <span class="slider"></span>
                                                    </label>
                                                </div>
                                                <div class="banner-actions">
                                                    <button class="btn btn-sm btn-primary" data-banner-id="${escapeAttr(bannerId)}" data-banner-type="${escapeAttr(type)}"><i class="icon-edit"></i></button>
                                                    <button class="btn btn-sm btn-danger" onclick="deleteBanner('${type}','${escapeAttr(banner._id)}')"><i class="icon-trash"></i></button>
                                                </div>
                                            `;
                                        }
                                        // Attach edit event handler after element is in DOM
                                        setTimeout(() => {
                                            const editBtn = li.querySelector('.btn-primary[data-banner-id]');
                                            if (editBtn) {
                                                editBtn.onclick = function () {
                                                    const id = this.getAttribute('data-banner-id');
                                                    const t = this.getAttribute('data-banner-type');
                                                    if (window._bannerDataMap && window._bannerDataMap[id]) {
                                                        showEditBannerModal(t, window._bannerDataMap[id]);
                                                    }
                                                };
                                            }
                                        }, 0);

                                        list.appendChild(li);
                                    });
                                }

                                // On page load, fetch all banners
                                ['main', 'two', 'three', 'mobile'].forEach(fetchBanners);

                                // Banner form submit
                                document.getElementById('bannerForm').onsubmit = async function (e) {
                                    e.preventDefault();
                                    const type = document.getElementById('bannerType').value;
                                    const id = document.getElementById('bannerId').value;

                                    // Hide all fields not relevant to the current type to avoid "not focusable" errors
                                    if (type === 'mobile') {
                                        document.getElementById('mainFields').querySelectorAll('input,textarea').forEach(function(el) {
                                            el.disabled = true;
                                            el.removeAttribute('required');
                                        });
                                        document.getElementById('mobileFields').querySelectorAll('input,textarea').forEach(function(el) {
                                            el.disabled = false;
                                        });
                                    } else {
                                        document.getElementById('mainFields').querySelectorAll('input,textarea').forEach(function(el) {
                                            el.disabled = false;
                                        });
                                        document.getElementById('bannerTitle').setAttribute('required', 'required');
                                        document.getElementById('mobileFields').querySelectorAll('input,textarea').forEach(function(el) {
                                            el.disabled = true;
                                        });
                                    }

                                    let formData = new FormData();
                                    let url, method;

                                    if (type === 'mobile') {
                                        const link = document.getElementById('mobileBannerLink').value;
                                        const image = document.getElementById('mobileBannerImage').files[0];
                                        formData.append('link', link);
                                        if (image) formData.append('image', image);
                                    } else {
                                        const title = document.getElementById('bannerTitle').value;
                                        const subtitle = document.getElementById('bannerSubtitle').value;
                                        const description = document.getElementById('bannerDescription').value;
                                        const link = document.getElementById('bannerLink').value;
                                        const image = document.getElementById('bannerImage').files[0];
                                        formData.append('title', title);
                                        formData.append('subtitle', subtitle);
                                        formData.append('description', description);
                                        formData.append('link', link);
                                        if (image) formData.append('image', image);
                                    }

                                    if (id) {
                                        url = bannerApi[type].put + id;
                                        method = 'PUT';
                                    } else {
                                        url = bannerApi[type].post;
                                        method = 'POST';
                                    }

                                    try {
                                        const res = await fetch(url, {
                                            method,
                                            body: formData
                                        });
                                        if (!res.ok) throw new Error('Failed to save banner');
                                        closeBannerModal();
                                        fetchBanners(type);
                                    } catch (err) {
                                        alert('Error: ' + err.message);
                                    }
                                };

                                // Delete banner
                                async function deleteBanner(type, id) {
                                    if (!confirm('Are you sure you want to delete this banner?')) return;
                                    try {
                                        const res = await fetch(bannerApi[type].del + id, { method: 'DELETE' });
                                        if (!res.ok) throw new Error('Failed to delete');
                                        fetchBanners(type);
                                    } catch (err) {
                                        alert('Error: ' + err.message);
                                    }
                                }

                                // Toggle banner status
                                async function toggleBannerStatus(type, id, checkbox) {
                                    try {
                                        const res = await fetch(bannerApi[type].toggle + id + '/toggle', { method: 'PATCH' });
                                        if (!res.ok) throw new Error('Failed to update status');
                                    } catch (err) {
                                        alert('Error: ' + err.message);
                                        checkbox.checked = !checkbox.checked;
                                    }
                                }

                                // Image preview for main/other banners
                                document.getElementById('bannerImage').addEventListener('change', function () {
                                    const file = this.files[0];
                                    const preview = document.getElementById('bannerImagePreview');
                                    if (file) {
                                        const reader = new FileReader();
                                        reader.onload = function (e) {
                                            preview.innerHTML = '<img src="' + e.target.result + '" style="width:120px;height:50px;object-fit:cover;border-radius:4px;">';
                                        };
                                        reader.readAsDataURL(file);
                                    } else {
                                        preview.innerHTML = '';
                                    }
                                });

                                // Image preview for mobile banner
                                document.getElementById('mobileBannerImage').addEventListener('change', function () {
                                    const file = this.files[0];
                                    const preview = document.getElementById('mobileBannerImagePreview');
                                    if (file) {
                                        const reader = new FileReader();
                                        reader.onload = function (e) {
                                            preview.innerHTML = '<img src="' + e.target.result + '" style="width:120px;height:50px;object-fit:cover;border-radius:4px;">';
                                        };
                                        reader.readAsDataURL(file);
                                    } else {
                                        preview.innerHTML = '';
                                    }
                                });

                            </script>

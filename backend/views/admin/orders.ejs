                                            <th class="order-header-cell">Order ID</th>
                                            <th class="order-header-cell">Customer</th>
                                            <th class="order-header-cell">Amount</th>
                                            <th class="order-header-cell">Status</th>
                                            <th class="order-header-cell">Date</th>

                                                <input type="number" id="editCouponValue" name="value" min="0" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="editMinPurchase">Minimum Purchase</label>
                                                <input type="number" id="editMinPurchase" name="minPurchase" min="0">
                                            </div>
                                            <div class="form-group">
                                                <label for="editValidFrom">Valid From</label>
                                                <input type="date" id="editValidFrom" name="validFrom" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="editValidUntil">Valid Until</label>
                                                <input type="date" id="editValidUntil" name="validUntil" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="editMaxUses">Max Uses</label>
                                                <input type="number" id="editMaxUses" name="maxUses" min="1">
                                            </div>
                                            <div class="form-group">
                                                <label for="editApplicableCategories">Applicable Categories</label>
                                                <div id="editCategorySelectWrapper">
                                                    <div class="category-select-mode">
                                                        <label>
                                                            <input type="radio" name="editCategoryMode" value="multiple" checked>
                                                            Multiple
                                                        </label>
                                                        <label style="margin-left: 15px;">
                                                            <input type="radio" name="editCategoryMode" value="single">
                                                            Single
                                                        </label>
                                                    </div>
                                                    <select id="editApplicableCategories" name="applicableCategories" multiple style="width:100%; margin-top: 8px;">
                                                        <% if (Array.isArray(categories) && categories.length) { %>
                                                            <% categories.forEach(function(cat) { %>
                                                                <option value="<%= cat._id || cat.id || cat.name %>"><%= cat.name || cat.title || cat._id || cat.id %></option>
                                                            <% }); %>
                                                        <% } else { %>
                                                            <option disabled>No categories found</option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <small class="text-tiny">Select one or more categories. Leave empty for all categories.</small>
                                            </div>
                                            <button type="submit" class="tf-button style-1">Update</button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <style>
                                .category-select-mode {
                                    margin-bottom: 4px;
                                    font-size: 13px;
                                    color: #444;
                                }
                                .category-select-mode label {
                                    cursor: pointer;
                                    user-select: none;
                                }
                                .category-select-mode input[type="radio"] {
                                    margin-right: 4px;
                                }
                            </style>

                            <script>
                            // Wait for DOMContentLoaded to ensure scripts run after DOM is ready
                            document.addEventListener('DOMContentLoaded', function () {
                                // Helper: format date
                                function formatDate(dateStr) {
                                    if (!dateStr) return '';
                                    const d = new Date(dateStr);
                                    return d.toLocaleDateString();
                                }

                                // Helper: render categories as comma separated names
                                function renderCategories(catArr) {
                                    if (!catArr || !catArr.length) return '<span class="text-tiny text-muted">All</span>';
                                    return catArr.map(function(cat) {
                                        if (typeof cat === 'string') return cat;
                                        if (cat && cat.name) return cat.name;
                                        return '';
                                    }).filter(Boolean).join(', ');
                                }

                                // Fetch and render coupons
                                function fetchCoupons() {
                                    fetch('/coupons')
                                        .then(res => res.json())
                                        .then(function (coupons) {
                                            const list = document.getElementById('coupon-list');
                                            list.innerHTML = '';
                                            if (!coupons.length) {
                                                const li = document.createElement('li');
                                                li.className = 'body-text text-center py-3';
                                                li.textContent = 'No coupons found.';
                                                list.appendChild(li);
                                                return;
                                            }
                                            coupons.forEach(function (c) {
                                                const li = document.createElement('li');
                                                li.className = 'flex gap20 items-center py-2 border-bottom';
                                                li.innerHTML = `
                                                    <div style="min-width:120px;"><span class="body-text">${c.code}</span></div>
                                                    <div style="min-width:120px;"><span class="body-text">${c.discountType ? (c.discountType.charAt(0).toUpperCase() + c.discountType.slice(1)) : ''}</span></div>
                                                    <div style="min-width:100px;"><span class="body-text">${c.discountType === 'percentage' ? c.value + '%' : '₹' + c.value}</span></div>
                                                    <div style="min-width:120px;"><span class="body-text">${c.minPurchase ? '₹' + c.minPurchase : '-'}</span></div>
                                                    <div style="min-width:140px;"><span class="body-text">${formatDate(c.validFrom)}</span></div>
                                                    <div style="min-width:140px;"><span class="body-text">${formatDate(c.validUntil)}</span></div>
                                                    <div style="min-width:100px;"><span class="body-text">${c.maxUses || '-'}</span></div>
                                                    <div style="min-width:100px;"><span class="body-text">${c.usedCount || 0}</span></div>
                                                    <div style="min-width:160px;"><span class="body-text">${renderCategories(c.applicableCategories)}</span></div>
                                                    <div style="min-width:80px;">
                                                        <span class="badge ${c.isActive ? 'bg-success' : 'bg-danger'}">${c.isActive ? 'Active' : 'Inactive'}</span>
                                                    </div>
                                                    <div style="min-width:120px;">
                                                        <button class="btn btn-sm btn-primary" data-edit-id="${c._id}"><i class="fa fa-edit"></i></button>
                                                        <button class="btn btn-sm btn-warning" data-toggle-id="${c._id}" data-active="${c.isActive}" title="${c.isActive ? 'Deactivate' : 'Activate'}"><i class="fa ${c.isActive ? 'fa-ban' : 'fa-check'}"></i></button>
                                                        <button class="btn btn-sm btn-danger" data-delete-id="${c._id}"><i class="fa fa-trash"></i></button>
                                                    </div>
                                                `;
                                                list.appendChild(li);
                                            });

                                            // Attach event listeners for action buttons
                                            document.querySelectorAll('[data-edit-id]').forEach(function(btn) {
                                                btn.onclick = function() {
                                                    showEditCouponModal(btn.getAttribute('data-edit-id'));
                                                };
                                            });
                                            document.querySelectorAll('[data-toggle-id]').forEach(function(btn) {
                                                btn.onclick = function() {
                                                    toggleCouponActive(btn.getAttribute('data-toggle-id'), btn.getAttribute('data-active') === 'true');
                                                };
                                            });
                                            document.querySelectorAll('[data-delete-id]').forEach(function(btn) {
                                                btn.onclick = function() {
                                                    deleteCoupon(btn.getAttribute('data-delete-id'));
                                                };
                                            });
                                        })
                                        .catch(function () {
                                            const list = document.getElementById('coupon-list');
                                            list.innerHTML = '<li class="body-text text-center py-3 text-danger">Failed to load coupons.</li>';
                                        });
                                }

                                // --- Category select mode logic (Add Coupon Modal) ---
                                function setCategorySelectMode(wrapperId, selectId, radioName) {
                                    const wrapper = document.getElementById(wrapperId);
                                    if (!wrapper) return;
                                    const select = wrapper.querySelector('select');
                                    const radios = wrapper.querySelectorAll('input[type="radio"][name="' + radioName + '"]');
                                    radios.forEach(function(radio) {
                                        radio.addEventListener('change', function() {
                                            if (radio.value === 'single') {
                                                select.multiple = false;
                                                select.size = 6; // show more options for single select
                                            } else {
                                                select.multiple = true;
                                                select.size = undefined;
                                            }
                                            // Deselect all if switching mode
                                            Array.from(select.options).forEach(function(opt) { opt.selected = false; });
                                        });
                                    });
                                }

                                // Show Add Coupon Modal
                                window.showAddCouponModal = function () {
                                    document.getElementById('addCouponForm').reset();
                                    // Default to multiple mode
                                    document.querySelector('input[name="categoryMode"][value="multiple"]').checked = true;
                                    document.getElementById('applicableCategories').multiple = true;
                                    document.getElementById('applicableCategories').size = undefined;
                                    setCategorySelectMode('categorySelectWrapper', 'applicableCategories', 'categoryMode');
                                    document.getElementById('addCouponModal').style.display = 'block';
                                };

                                // Show Edit Coupon Modal
                                window.showEditCouponModal = function (id) {
                                    fetch('/coupons/' + id)
                                        .then(res => res.json())
                                        .then(function (c) {
                                            document.getElementById('editCouponId').value = c._id;
                                            document.getElementById('editCouponDescription').value = c.description || '';
                                            document.getElementById('editDiscountType').value = c.discountType;
                                            document.getElementById('editCouponValue').value = c.value;
                                            document.getElementById('editMinPurchase').value = c.minPurchase || '';
                                            document.getElementById('editValidFrom').value = c.validFrom ? c.validFrom.substr(0,10) : '';
                                            document.getElementById('editValidUntil').value = c.validUntil ? c.validUntil.substr(0,10) : '';
                                            document.getElementById('editMaxUses').value = c.maxUses || '';
                                            // Set selected categories in edit modal
                                            let selectedCats = [];
                                            if (Array.isArray(c.applicableCategories)) {
                                                selectedCats = c.applicableCategories.map(function(cat) {
                                                    if (typeof cat === 'string') return cat;
                                                    if (cat && cat._id) return cat._id;
                                                    if (cat && cat.id) return cat.id;
                                                    if (cat && cat.name) return cat.name;
                                                    return '';
                                                }).filter(Boolean);
                                            }
                                            // Set selected options
                                            var select = document.getElementById('editApplicableCategories');
                                            Array.from(select.options).forEach(function(opt) {
                                                opt.selected = selectedCats.indexOf(opt.value) !== -1;
                                            });
                                            // Default to multiple mode
                                            document.querySelector('input[name="editCategoryMode"][value="multiple"]').checked = true;
                                            select.multiple = true;
                                            select.size = undefined;
                                            setCategorySelectMode('editCategorySelectWrapper', 'editApplicableCategories', 'editCategoryMode');
                                            document.getElementById('editCouponModal').style.display = 'block';
                                        });
                                };

                                // Close Modal
                                window.closeModal = function (id) {
                                    document.getElementById(id).style.display = 'none';
                                };

                                // Add Coupon Submit
                                document.getElementById('addCouponForm').addEventListener('submit', function (e) {
                                    e.preventDefault();
                                    const catSelect = document.getElementById('applicableCategories');
                                    let selectedCategories = [];
                                    if (catSelect.multiple) {
                                        selectedCategories = Array.from(catSelect.selectedOptions).map(opt => opt.value);
                                    } else {
                                        selectedCategories = catSelect.value ? [catSelect.value] : [];
                                    }
                                    const data = {
                                        code: document.getElementById('couponCode').value,
                                        description: document.getElementById('couponDescription').value,
                                        discountType: document.getElementById('discountType').value,
                                        value: document.getElementById('couponValue').value,
                                        minPurchase: document.getElementById('minPurchase').value,
                                        validFrom: document.getElementById('validFrom').value,
                                        validUntil: document.getElementById('validUntil').value,
                                        maxUses: document.getElementById('maxUses').value,
                                        applicableCategories: selectedCategories
                                    };
                                    fetch('/create-coupon', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify(data)
                                    })
                                    .then(function (res) {
                                        if (!res.ok) return res.json().then(err => { throw err; });
                                        return res.json();
                                    })
                                    .then(function () {
                                        closeModal('addCouponModal');
                                        fetchCoupons();
                                    })
                                    .catch(function (err) {
                                        alert((err && err.error) || 'Failed to add coupon');
                                    });
                                });

                                // Edit Coupon Submit
                                document.getElementById('editCouponForm').addEventListener('submit', function (e) {
                                    e.preventDefault();
                                    const id = document.getElementById('editCouponId').value;
                                    const catSelect = document.getElementById('editApplicableCategories');
                                    let selectedCategories = [];
                                    if (catSelect.multiple) {
                                        selectedCategories = Array.from(catSelect.selectedOptions).map(opt => opt.value);
                                    } else {
                                        selectedCategories = catSelect.value ? [catSelect.value] : [];
                                    }
                                    const data = {
                                        description: document.getElementById('editCouponDescription').value,
                                        value: document.getElementById('editCouponValue').value,
                                        minPurchase: document.getElementById('editMinPurchase').value,
                                        validFrom: document.getElementById('editValidFrom').value,
                                        validUntil: document.getElementById('editValidUntil').value,
                                        maxUses: document.getElementById('editMaxUses').value,
                                        applicableCategories: selectedCategories
                                    };
                                    fetch('/update-coupon/' + id, {
                                        method: 'PUT',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify(data)
                                    })
                                    .then(function (res) {
                                        if (!res.ok) return res.json().then(err => { throw err; });
                                        return res.json();
                                    })
                                    .then(function () {
                                        closeModal('editCouponModal');
                                        fetchCoupons();
                                    })
                                    .catch(function (err) {
                                        alert((err && err.error) || 'Failed to update coupon');
                                    });
                                });

                                // Toggle Active
                                window.toggleCouponActive = function (id, isActive) {
                                    fetch('/toggle-coupon/' + id, {
                                        method: 'PATCH'
                                    })
                                    .then(function (res) {
                                        if (!res.ok) return res.json().then(err => { throw err; });
                                        return res.json();
                                    })
                                    .then(function () {
                                        fetchCoupons();
                                    })
                                    .catch(function (err) {
                                        alert((err && err.error) || 'Failed to update status');
                                    });
                                };

                                // Delete Coupon
                                window.deleteCoupon = function (id) {
                                    if (!confirm('Are you sure you want to delete this coupon?')) return;
                                    fetch('/delete-coupon/' + id, {
                                        method: 'DELETE'
                                    })
                                    .then(function (res) {
                                        if (!res.ok) return res.json().then(err => { throw err; });
                                        return res.json();
                                    })
                                    .then(function () {
                                        fetchCoupons();
                                    })
                                    .catch(function (err) {
                                        alert((err && err.error) || 'Failed to delete coupon');
                                    });
                                };

                                // Modal close on background click
                                document.querySelectorAll('.modal').forEach(function(modal) {
                                    modal.addEventListener('click', function(e) {
                                        if (e.target === modal) modal.style.display = 'none';
                                    });
                                });

                                // Initial fetch
                                fetchCoupons();
                            });
                            </script>
                            <!-- /main-content-wrap -->
                        </div>
                        <!-- /main-content-wrap -->
                        <!-- bottom-page -->
                        <div class="bottom-page">
                            <div class="body-text">Copyright © 2025 <a href="">Hofmaan</a>.
                                Developed by Trivlogic Private Limited All rights reserved</div>
                        </div>
                        <!-- /bottom-page -->
                    </div>
                    <!-- /main-content -->
                </div>
                <!-- /section-content-right -->
            </div>
            <!-- /layout-wrap -->
        </div>
        <!-- /#page -->
    </div>

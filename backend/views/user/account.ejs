                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify(data)
                            });
                            showToast("Address created successfully");
                        }

                        closeModal();
                        loadAddresses();
                    } catch (err) {
                        console.error("Failed to save address", err);
                        showToast("Failed to save address", "error");
                    }
                });


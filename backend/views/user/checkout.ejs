                            alert('Failed to save address. Please try again.');
                        } finally {
                            const saveBtn = document.getElementById('save-address');
                            if (saveBtn) {
                                saveBtn.disabled = false;
                                saveBtn.textContent = 'Save Address';
                            }
                        }
